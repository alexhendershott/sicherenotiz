<div class="registration-container">
  <div class="registration-item">

  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.text_field :fname, placeholder: "First Name", class: "registration", autofocus: true %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email Address", class: "registration", autofocus: true %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, placeholder: "Password", class: "registration", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Re-type Password", class: "registration", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Gooooooo!", class: "registration-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
