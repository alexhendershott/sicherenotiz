<script>
  $(".title").focus();
  $( ".btn-add-new" ).click(function() {
    $(".title").focus();
  });
  $( ".btn-search" ).click(function() {
    event.preventDefault();
    $('.search').show();
    $('#search').focus();
  });
  $('input[type=search]').bind("enterKey",function(e){
    $('.search').hide();
  });
  $('input[type=search]').keyup(function(e){
    if(e.keyCode == 13)
      {
        $(this).trigger("enterKey");
      }
    });
</script>
