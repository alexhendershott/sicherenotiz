<% if Note.all.empty? %>

<% else %>

<%= form_for @note do |f| %>
  <div class="info-bar">
    <div class="date-created">
      Created:
      <span class="date">
        <%= @note.created_at.localtime.strftime("%b %e, %l:%M %p") %>
      </span>
    </div>
    <div class="date-updated">
      Updated:
      <span id="updated_at" class="date">
        <%= @note.updated_at.localtime.strftime("%b %e, %l:%M %p") %>
      </span>
    </div>
    <div class="actions">
      <%= link_to @note, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="auto-save">

    </div>
  </div>
  <%= f.text_area :title, class: "title", cols: 1, rows: 1 %>
  <%= f.text_area :content, :value => decryptor(@note.content), class:"content" %>

  <div class="actions">
    <%= f.submit "Submit", id: "submit-last" %>
  </div>
<% end %>

<% end %>

<script>
  autosize(document.querySelectorAll('textarea'));
</script>

<script>
  window.setInterval(function(){
    $('#submit-last').trigger('click');
  }, 10000);
</script>
