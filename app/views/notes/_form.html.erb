<%= form_for note do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="info-bar">
    <div class="date-created">
      Created:
      <span class="date">
        Now
      </span>
    </div>
    <div class="date-updated">
      Updated:
      <span id="updated_at" class="date">
        Now
      </span>
    </div>
    <div class="actions">
      <%= link_to @note, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="auto-save">

    </div>
  </div>
  <%= f.text_area :title, placeholder: "Untitled", class: "title", cols: 1, rows: 1 %>
  <%= f.text_area :content, placeholder: "Start typing note content...", class:"content" %>

  <div class="actions">
    <%= f.submit "Submit", id: "submit-new" %>
  </div>
<% end %>

<script>
  autosize(document.querySelectorAll('textarea'));
</script>

<script>
  window.setInterval(function(){
    $('#submit-new').trigger('click');
  }, 30000);
</script>
